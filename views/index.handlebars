<div class="row text-white bg-dark mb-4">
  <div class="col-12 card-header">
    <h1 class= "text-center">Good-Burger!</h1>
    
  </div>
</div>

{{!-- form for adding a burger --}}
<div>
<h2 class= "text-center">Add a burger</h2>
<form class="create-form text-center">

  <div class="form-group">
    <label for="burger">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="burgery">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Already eated!<br>
    <input type="radio" name="devoured" value="0"> Going to be eated!
  </div>
{{!-- First Card  for showing burgers waiting to be devoured--}}
  <button type="submit">Add burger</button>
</form>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">burgers that need to be devoured!</h5>
        <p class="card-text">{{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}</p>
      </div>
    </div>
  </div>

{{!-- Second card for showing devoured burgers --}}
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Burgers that are devoured!</h5>
        <p class="card-text">{{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}</p>
      </div>
    </div>
  </div>
</div>
